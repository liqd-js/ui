        {
            display: flex;
            flex-direction: row;
            justify-content: flex-start;
            border: 1px solid silver;
        }
    </style>
    <div class={'UI_Tab' + ( $props.class ? ' ' + $props.class : '' )} {[data-*]...$props} onclick="console.log(this.dataset);">
